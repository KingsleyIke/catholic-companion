<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.parish.updates.UpdateParishInfoFragment"
    android:padding="5dp"
    android:orientation="vertical">

<!--    <ProgressBar-->
<!--        android:id="@id/progress_bar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        style="@android:style/Widget.ProgressBar.Horizontal"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <com.beardedhen.androidbootstrap.BootstrapProgressBar
        android:id="@id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:animated="true"
        app:bootstrapBrand="regular"
        app:striped="true"
        app:bootstrapProgress="100"
        app:roundedCorners="true"
        app:bootstrapSize="xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_update_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:text="@string/update"
                    android:textColor="@color/main_color_dark" />

                <RadioButton
                    android:id="@+id/rb_new_addition_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:text="@string/new_addition"
                    android:textColor="@color/main_color_dark" />
            </RadioGroup>

            <!-- Parish Name-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_parish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Parish Name *"
                android:textColorHint="@color/white"
                app:errorTextColor="@color/gray">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_parish_list_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen" />

                <EditText
                    android:id="@+id/et_parish_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Parish Address-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_parish_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Enter Address *"
                android:textColorHint="@color/white"
                app:errorTextColor="@color/gray">

                <EditText
                    android:id="@+id/et_parish_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Parish Website-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_parish_website"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Enter Parish Website"
                android:textColorHint="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_parish_website"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Diocese-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_diocese"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Select Diocese *"
                android:textColorHint="@color/white">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_diocese_list_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_diocese"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Deanery-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_deanery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Select Deanery *"
                android:textColorHint="@color/white">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_deanery_list_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_deanery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_color_background" />

            <!-- Pastoral team-->
            <TextView
                android:id="@+id/pastoral_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Add Pastoral Team"
                android:textColor="@color/main_color_light_dark"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pastoral_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/backround_rounded_white"
                android:elevation="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Add Pastoral team member"
                android:textColor="@color/main_color_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_color_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_btn" />

            <!-- Sunday Mass-->
            <TextView
                android:id="@+id/sunday_mass_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Add Sunday Masses"
                android:textColor="@color/main_color_light_dark"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sunday_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sunday_mass_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/backround_rounded_white"
                android:elevation="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Add Sunday Mass"
                android:textColor="@color/main_color_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_color_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_images_add_btn" />

            <!-- Weekday Mass-->
            <TextView
                android:id="@+id/weekday_mass_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Add Weekday Masses"
                android:textColor="@color/main_color_light_dark"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weekday_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weekday_mass_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/backround_rounded_white"
                android:elevation="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Add Weekday Mass"
                android:textColor="@color/main_color_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_color_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_images_add_btn" />

            <!-- Parish Images -->
            <TextView
                android:id="@+id/images_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Add Parish image"
                android:textColor="@color/main_color_light_dark"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_parish_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_images_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/backround_rounded_white"
                android:elevation="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Add Parish Images"
                android:textColor="@color/main_color_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_color_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_images_add_btn" />


            <TextView
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/backround_rounded_white"
                android:elevation="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Publish"
                android:textColor="@color/main_color_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>