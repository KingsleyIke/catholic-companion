<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_gradient_dark_main_color"
    tools:context=".ui.authentication.SingInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_church_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_first_name"
                app:layout_constraintStart_toStartOf="@+id/et_first_name" />


            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:hint=" Enter First Name"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sign_up" />

            <TextView
                android:id="@+id/first_name_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter first Name"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_first_name"
                app:layout_constraintTop_toBottomOf="@+id/et_first_name" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_last_name"
                app:layout_constraintStart_toStartOf="@+id/et_last_name" />

            <EditText
                android:id="@+id/et_username_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:hint=" Enter User Name"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_last_name" />

            <TextView
                android:id="@+id/last_name_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter Last name"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_last_name"
                app:layout_constraintTop_toBottomOf="@+id/et_last_name" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_username_name"
                app:layout_constraintStart_toStartOf="@+id/et_username_name" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:hint=" Enter Last Name"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

            <TextView
                android:id="@+id/user_name_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter user name"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_username_name"
                app:layout_constraintTop_toBottomOf="@+id/et_username_name" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_email_address"
                app:layout_constraintStart_toStartOf="@+id/et_email_address" />

            <EditText
                android:id="@+id/et_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:hint=" Enter Last Name"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_username_name" />

            <TextView
                android:id="@+id/email_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter email address"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_email_address"
                app:layout_constraintTop_toBottomOf="@+id/et_email_address" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_password"
                app:layout_constraintStart_toStartOf="@+id/et_password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_key_24"
                android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                android:inputType="textPassword"
                android:hint=" Enter password"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email_address" />

            <TextView
                android:id="@+id/password_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter password "
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_password"
                app:layout_constraintTop_toBottomOf="@+id/et_password" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/et_confrim_password"
                app:layout_constraintStart_toStartOf="@+id/et_confrim_password" />

            <EditText
                android:id="@+id/et_confrim_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:drawableLeft="@drawable/ic_baseline_key_24"
                android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                android:inputType="textPassword"
                android:hint=" Confirm password"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password" />

            <TextView
                android:id="@+id/password_confirmation_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enter password "
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/et_confrim_password"
                app:layout_constraintTop_toBottomOf="@+id/et_confrim_password" />

            <Button
                android:id="@+id/btn_sing_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/white"
                android:text="@string/sign_up"
                android:textColor="@color/main_color_dark"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_confrim_password" />

            <TextView
                android:id="@+id/tv_return_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btn_sing_up"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btn_return_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_return_to_login" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>