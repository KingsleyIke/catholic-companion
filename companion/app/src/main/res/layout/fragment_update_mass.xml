<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".ui.parish.updates.UpdateParishActivitiesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_parish_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Parish Names *">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_parish_name_spinner"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_parish_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Category *">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_category_spinner"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Title *">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_title_spinner"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

                <!--todo add drop down icon toogle on click-->
                <!--todo add question mark icon-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                android:hint="Information *">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="20dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/main_color_dark"
                android:textStyle="bold"
                android:background="@drawable/backround_rounded_white"
                android:text="Submit"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>