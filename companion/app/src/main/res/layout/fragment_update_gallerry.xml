<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.parish.updates.UpdateParishInfoFragment"
    android:padding="5dp"
    android:orientation="vertical">

<!--    todo  completet ui with recycler view for images when added-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                >
                <!--        todo find a way to add corner radius to spinner without linera layout-->

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/parish_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/SpinnerStyle"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/error_msg_parish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Parish must be selected"
                android:textColor="@color/main_color_light_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/category_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/SpinnerStyle"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/error_msg_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Category must be selected"
                android:textColor="@color/main_color_light_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="6"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="5.5"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/time_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/SpinnerStyle"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight=".5"
                    android:drawableRight="@drawable/ic_baseline_question_mark_24"
                    android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/error_msg_time_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Select a time limit for update"
                android:textColor="@color/main_color_light_dark"/>

            <EditText
                android:id="@+id/tv_update_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:hint="Select Images"
                android:textColorHint="@color/gray"
                android:background="@drawable/backround_rounded_darker_light_color_update_screen"
                />
            <TextView
                android:id="@+id/error_msg_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Parish must be selected"
                android:textColor="@color/main_color_light_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="20dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/main_color_dark"
                android:textStyle="bold"
                android:background="@drawable/backround_rounded_white"
                android:text="Publish"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>